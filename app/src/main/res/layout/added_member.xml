<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_12"
    android:id="@+id/message">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacingVertical="5dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/member"
        android:layout_width="match_parent"
        app:chipMinHeight="60dp"
        app:textStartPadding="19dp"
        app:closeIconEndPadding="19dp"
        app:chipIconSize="50dp"
        app:closeIconSize="25dp"
        app:chipCornerRadius="5dp"
        app:chipIcon="@drawable/fpbm_chat"
        app:iconStartPadding="@dimen/padding_12"
        app:closeIcon="@drawable/ic_baseline_delete_24"
        app:closeIconTint="#DA1414"
        android:layout_height="wrap_content"
        app:closeIconEnabled="true"
        app:checkedIconEnabled="false"
        android:checkable="false"
        android:text="No members added"
        />


    </com.google.android.material.chip.ChipGroup>

</RelativeLayout>